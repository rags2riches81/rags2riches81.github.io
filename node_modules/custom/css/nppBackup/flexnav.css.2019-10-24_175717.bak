.topnav{ /*Container to keep the site-nav and page-nav*/
	 background-color : rgba(36,36,36,0.60)!IMPORTANT;
	z-index          : 1050;
	position:fixed;
	top:0;
	width:100%;


}
.flexnav {
  
  display          : flex;
  width            : 100%;
  height           : 2rem;
 justify-content   : flex-end;/*space-between;   */
  flex-direction   : row;
  align-items      : center;
  /* content-justify:flex; */
}
.logo > a{color       : #ff550b!important;}
.donate {
  background-color : #8cdde8;
}

.donate-a {
  color       : #ff550b!important;
  text-shadow : .125rem .125rem .0625rem rgba(0, 0, 0, 1.00);
}



.current {
  color           : #F0F0EA;
  text-decoration : underline;
  order: 2;
  /* font-size       : 1rem!important; */
}

