  width      : 100%;
  list-style : none;
	background-color:#222222;
}
.nav-link {
  color           : #7dd9ec;
  text-decoration : none;
  text-transform  : uppercase;
  font-style      : normal;
  line-height     : 1.5rem;
  width:100%;
  white-space:nowrap;
}
@media (any-hover:none) and (any-pointer:coarse){
#sublist{
  background-color : #6f1a07!important;
}
#sublist > ul > .nav-item {
  text-align:right;
  width:100%;
  //*padding          : 1.5rem 0;*/
 
}



.flexnav {}

.flexspace {
  /* [disabled]display: block; */
  display:none;
  flex-grow : 1;
  order     : 1;
}

.toggle {
  display      : block!important;
  margin-right : 1rem;
  font-size    :2rem;
  order        : 1;
}

.item {
  display    : none;
  width      : 100%!important;
  padding    : 1.5rem;
  text-align : left;
  font-size  : 1.5rem;
}
    .nav-item, .item{
      width:100%;
 
    }
    .nav-item{
        text-align:right!important;
        padding-left:2rem;
      
    }
    .current{
        text-decoration: underline;
        color:#ddd;
    }
