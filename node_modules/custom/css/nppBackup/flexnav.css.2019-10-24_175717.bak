/**
 * ***************************************************************************
 * Small screen
 * **********************************************************************
 */

/**
 * @media all and (max-width:599.98px), @media screen and
 * (-webkit-min-device-pixel-ratio: 2), screen and (min-resolution: 192dpi),
 * screen and (min-resolution: 2dppx) {
 */

ul#navlist {
    /*display:flex;
    justify-content:space-between;*/
  width      : 100%;
  list-style : none;
	background-color:#222222;
}
.nav-link {
  color           : #7dd9ec;
  text-decoration : none;
  text-transform  : uppercase;
  font-style      : normal;
  line-height     : 1.5rem;
  width:100%;
  white-space:nowrap;
}
.logo {white-space:nowrap;}
@media screen and (width <1024px),
screen and (any-hover:none),
screen and (any-pointer:coarse){
  #sublist{
    background-color : #6f1a07!important;
  }
  #sublist > ul > .nav-item {
    text-align:right;
    width:100%;
    padding          : 1.5rem 2rem; 
  }

  .flexspace {
    display: block;
    flex-grow : 2;
    order     : 1;
  }

  .toggle {
    display      : block!important;
    margin-right : 1rem;
    font-size    :2rem;
    order        : 1;
  }

  .item {
      width: 100%;
      text-align: center;
      order: 2;
      display: none;
      padding:1.5rem;
      font-size:1.5rem;
  }
.item.active {
    display: block;
}
    
    .nav-item{
        width:100%;
        text-align:right!important;
        padding-right:2rem;
      
    }
    .current{
        text-decoration: underline;
        color:#ddd;
    }
/**
 * ***************************************************************************
 * COMPUTER SCREEN
 * **********************************************************************
 */
@media all and (min-width: 1024px){
  .flexnav{
    position : static;
    top      : 0;
    height   : 2rem;
    margin-bottom:0;
  }
.item{
    display:block!important;
    padding:0 0.75
  }
  .toggle {
      display:none!important;
  }
  .donate {
    margin-right:0;
    padding-right:1rem;
  }
  #sublist {
      display          : flex;

    width            : 100vw;
    color            : #8CDDE8;
    border-bottom    : medium solid #0499b3;
    background-color : #6f1a07!important;
    font-size        : 1rem;
    line-height      : 1.5rem;
    justify-content : center!important;
    margin-top:0;
    margin-bottom:0;
  }
  #sublist > ul {
      display:flex;
      margin: 0 auto;
      justify-content:flex-start;
      
  }
